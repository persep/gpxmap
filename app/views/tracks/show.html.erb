<%- model_class = Track -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @track.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gpx_file_name) %></dt>
      <dd><pre class="prettyprint"><%= @track.gpx_file_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gpx_content_type) %></dt>
      <dd><pre class="prettyprint"><%= @track.gpx_content_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gpx_file_size) %></dt>
      <dd><pre class="prettyprint"><%= @track.gpx_file_size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gpx_updated_at) %></dt>
      <dd><pre class="prettyprint"><%= @track.gpx_updated_at %></pre></dd>
  </dl>
</div>

<% 
=begin %>
<table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Point No.</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Elevation</th>
        <th>Description</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% @track.points.each do |point| %>
        <tr>
          <td><%= point.id %></td>
          <td><%= point.name %></td>
          <td><%= point.latitude %></td>
          <td><%= point.longitude %></td>
          <td><%= point.elevation %></td>
          <td><%= point.description %></td>
          <td><%= point.point_created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% 
=end %>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              tracks_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_track_path(@track), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              track_path(@track),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>

<div id="map_canvas" style="height: 600px;"></div>


